<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">price</th>
      
      <th scope="col">Image</th>
      <th scope="col">Quantity</th>
      <th scope="col"></th>
      
    </tr>
  </thead>
   {{#each cartproduct}}
  <tbody>
  
    <tr>
      <th scope="row"></th>
      <td>{{this.product.name}}</td>
      <td>{{this.product.price}}</td>
     
      <td><img src="/product_images/{{this.product._id}}.jpg" width="50" height="50" ></td>
      <td><button class="btn btn-info">-</button> {{this.quantity}} <button onclick="changeQuantity()" class="btn btn-info">+</button></td>
     <td ><button class="btn btn-danger">Remove</button></td>
     </tr>
    
  </tbody>
  {{/each}}