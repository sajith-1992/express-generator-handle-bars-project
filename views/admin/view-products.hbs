<div class="conatainer">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3 mb-4">
  <a href="/admin/add-product"><button class="btn btn-success me-md-2" type="button">add-product</button></a>

</div>
   <div>
    
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col"> Price</th>
      <th scope="col">Image </th>
      <th scope="col">Delete </th>
      <th scope="col">Edit </th>
    </tr>
  </thead>
   {{#each allProducts}}
  <tbody>
    
    <tr>
      <th scope="row"></th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img src="/product_images/{{this._id}}.jpg" width="50" height="50" ></td>
      <td><a class="btn btn-danger" href="/admin/delete/{{this._id}}"  onclick="return confirm('Are you sure you want to delete {{this.name}}?');" >Delete</a></td>
      <td><a class="btn btn-primary" href="/admin/edit">Edit</a></button></td>
    </tr>
    
  </tbody>
  {{/each}}
</table>

   </div>
</div>
